{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/quiz"
      ],
      "settings": {
        "preset": "desktop",
        "formFactor": "mobile",
        "screenEmulation": { "mobile": true, "width": 360, "height": 640, "deviceScaleFactor": 2 }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.85 }],
        "categories:accessibility": ["error", { "minScore": 0.90 }],
        "categories:pwa": ["error", { "minScore": 0.90 }],
        "largest-contentful-paint": ["error", { "maxNumericValue": 2500 }],
        "total-blocking-time": ["error", { "maxNumericValue": 300 }],
        "cumulative-layout-shift": ["error", { "maxNumericValue": 0.10 }],
        "performance-budget": ["error", { "budgetsFile": "lighthouse-budgets.json" }],
        "uses-text-compression": "error",
        "unminified-javascript": "error"
      }
    },
    "upload": { "target": "temporary-public-storage" }
  }
}
