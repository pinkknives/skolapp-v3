{
  "name": "skolapp-v3",
  "version": "1.0.0",
  "description": "Modern PWA for Skolapp with design system and accessibility features",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=50",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:accessibility": "playwright test --project=accessibility",
    "test:performance": "playwright test --project=performance",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "lighthouse": "lhci autorun",
    "qa:full": "npm run lint && npm run type-check && npm run build && npm run test:cross-browser && npm run lighthouse"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@types/qrcode": "^1.5.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.13",
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
    "next-pwa": "^5.6.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.3",
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.9.6",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
