{
  "name": "skolapp-v3",
  "version": "1.0.0",
  "description": "Modern PWA for Skolapp with design system and accessibility features",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "type-check": "tsc --noEmit",
    "typecheck:tests": "tsc -p tsconfig.tests.json --noEmit",
    "analyze": "ANALYZE=true next build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:all": "PW_BROWSERS=all playwright test",
    "test:headed": "playwright test --headed",
    "test:accessibility": "playwright test --project=accessibility",
    "test:performance": "playwright test --project=performance",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "e2e": "playwright test --project=chromium --project=firefox --project=webkit",
    "e2e:ai": "AI_MODE=mock playwright test tests/e2e/quiz-ai-flow.spec.ts",
    "e2e:headed": "playwright test --headed",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:ci": "playwright test --project=chromium --project=firefox --project=webkit --max-failures=5",
    "lighthouse": "lhci autorun",
    "qa:full": "npm run lint && npm run type-check && npm run build && npm run test:cross-browser && npm run lighthouse",
    "etl:skolverket": "node scripts/etl/skolverket.js",
    "etl:skolverket:fresh": "node scripts/etl/skolverket.js --fresh",
    "ingest:syllabus": "tsx scripts/ingest-syllabus.ts",
    "health:openai": "tsx scripts/health/openai.ts",
    "health:ably": "tsx scripts/health/ably.ts",
    "health:supabase": "tsx scripts/health/supabase.ts",
    "health:stripe": "tsx scripts/health/stripe.ts",
    "health:skolverket": "tsx scripts/health/skolverket.ts",
    "health:all": "npm run health:openai && npm run health:ably && npm run health:supabase && npm run health:stripe && npm run health:skolverket",
    "validate:env": "node scripts/validate-env.js"
  },
  "dependencies": {
    "@auth/supabase-adapter": "^1.10.0",
    "@heroui/react": "^2.8.4",
    "@heroui/theme": "^2.4.22",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/nextjs": "^10.15.0",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/ssr": "^0.4.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-table": "^8.21.3",
    "@types/qrcode": "^1.5.5",
    "ably": "^2.13.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "framer-motion": "^12.23.16",
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "openai": "^5.22.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss-animate": "^1.0.7",
    "tremor": "^0.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.3",
    "@octokit/rest": "^22.0.0",
    "@playwright/test": "^1.55.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.9.6",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.20",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "jsdom": "^27.0.0",
    "msw": "^1.3.5",
    "playwright": "^1.55.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
